        </inertial>
    </link>
    <joint name="mounting_pad_to_pad" type="fixed">
        <parent link="mounting_pad" />
        <child link="pad" />
        <origin xyz="0 0 0" rpy="0 0 0." />
    </joint>
    <!-- material definitions -->
    <material name="panda_white">
