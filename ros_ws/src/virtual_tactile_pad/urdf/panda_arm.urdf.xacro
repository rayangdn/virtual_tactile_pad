                <inertia ixx="0.0000361368" ixy="0.0" ixz="0.0" iyy="0.000046691" iyz="0.0"
                    izz="0.00007688" />
            </inertial>
        </link>
        <joint name="ati_net_gamma_to_mounting_pad" type="fixed">
            <parent link="ati_net_gamma" />
            <child link="mounting_pad" />
            <origin xyz="0 0 -0.0146" rpy="0 3.141592654 -0.023796327" />
        </joint>
    </xacro:if>

